%html
  %head
    %title
      Prisoners API

    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  - if user_signed_in?
    %p
      = current_user.email
      = link_to '(sign out)', destroy_user_session_path, method: :delete

  %body
    %p.notice
      = notice
    %p.alert
      = alert

    %h1
      Prisoners API

    = yield
