%h2
  Import records

= form_for @import, html: { multipart: true } do |f|
  = hidden_field_tag 'import[file]'

  - if @import.errors.any?
    %ul
      - @import.errors.full_messages.each do |message|
        %li
          = message

  %p
    = f.file_field :file
  %p
    = f.submit 'Import'

%p
  = link_to 'Back', imports_url
