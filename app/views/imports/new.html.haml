= GovukElementsErrorsHelper.error_summary @import,
  'There were problems submitting this form', ''

= render 'last_import', last_import: @last_import

%h2
  New import

= form_for @import, html: { multipart: true } do |f|
  = f.hidden_field :offenders_file

  .form-group
    != f.label :offenders_file, class: 'form-label'
    != f.file_field :offenders_file, class: 'form-control'

  = f.submit 'Import', class: "button"
